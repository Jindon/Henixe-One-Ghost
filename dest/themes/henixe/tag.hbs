{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}
    {{> "header"}}
{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{#tag}}

<div class="container">
    <div class="jumbotron text-center {{#if feature_image}}" style="background-image: url({{feature_image}}){{/if}}">
        <div class="container">
            <h1 class="display-5 hx-page-title">Tag: <span class="hx-custom-color">{{name}}</span></h1>
            <small class="lead">
                {{#if description}}
                    {{description}}
                {{/if}}
            </small>
        </div>
    </div>
</div>

{{/tag}}


<div class="container">
    <div class="row">
        {{#foreach posts}}
        {{> "post-card"}}
        {{/foreach}}
    </div>
</div>

{{pagination}}